{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2015",
    "strict": true,
    "outDir": "dist/",
    "module": "CommonJS",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@auth/*": ["./auth/*"],
      "@common/*": ["./common/*"],
      "@me/*": ["./me/*"],
      "@posts/*": ["./posts/*"],
      "@test/*": ["./test/*"],
      "@users/*": ["./users/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
